#video_info.panel.panel-default
  .panel-heading
    %h3.panel-title= @remote.name
  .panel-body
    %p
      = @remote.description
    - if current_user == @remote.user
      %p
        = link_to edit_remote_path(@remote.remote_id) do
          = button_tag "Edit Remote"
    %p
      %a{href: remote.url}
        Watch video on its own site.
    - if remote.admin_only == false || remote_user
      %span.label.label-success You are allowed to use this remote!