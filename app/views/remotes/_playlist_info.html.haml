- meta :description => @remote.description
#video_info.panel
  .video-heading
    -if @remote.authorization.is_authorized?('settings', current_user)
      #remote_name
        %span.glyphicon.glyphicon-edit.left
        %h3.panel-title.inline= @remote.name
    - else
      %h3.panel-title= @remote.name
  .video-body
    %p
      %label
        Share URL: #{ text_field_tag :share, 'http://fremote.tv' + remote_path(@remote), spellcheck: "false" }
      -if @remote.authorization.is_authorized?('settings', current_user)
        = link_to 'Edit Remote', edit_remote_path(@remote.remote_id), class: "btn btn-noborder right"
    %span#skip.btn.btn-noborder.right
      Skip Video
      %span.glyphicon.glyphicon-fast-forward
    -if @remote.authorization.is_authorized?('settings', current_user)
      #remote_description
        %span.glyphicon.glyphicon-edit.left
        %p.inline= @remote.description
    - else
      %p= @remote.description